# Laravel Production Environment Configuration
# Copy this to .env and adjust values for your production server

APP_NAME="DASM Platform"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Cache Configuration - Use database (install Redis extension for better performance)
CACHE_STORE=database
CACHE_PREFIX=dasm_cache_

# Session Configuration - Use database (install Redis extension for better performance)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Queue Configuration - Use database (install Redis extension for better performance)
QUEUE_CONNECTION=database

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Performance Configuration
LOG_LEVEL=error
RATE_LIMITING_ENABLED=true
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_API=100

# Performance Monitoring
LOG_PERFORMANCE_METRICS=false
LOG_SLOW_QUERIES=true
LOG_API_REQUESTS=false

# Memory and Resource Limits
MAX_EXECUTION_TIME=30
MEMORY_LIMIT=256M
MAX_INPUT_VARS=3000

# File Upload Optimization
MAX_FILE_SIZE=10240
IMAGE_COMPRESSION=true
IMAGE_QUALITY=85

# Queue Optimization
QUEUE_MAX_TRIES=3
QUEUE_TIMEOUT=60
QUEUE_RETRY_AFTER=90
QUEUE_BATCH_SIZE=100

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Broadcasting Configuration
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-key
PUSHER_APP_SECRET=your-pusher-secret
PUSHER_APP_CLUSTER=ap2

# Frontend URL
FRONTEND_URL=https://your-frontend-domain.com

# Cloudinary Configuration
CLOUDINARY_URL=cloudinary://your-cloudinary-url

# MyFatoorah Configuration
MYFATOORAH_API_URL=https://api.myfatoorah.com
MYFATOORAH_API_KEY=your-myfatoorah-key
MYFATOORAH_COUNTRY_ISO=SAU

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com
